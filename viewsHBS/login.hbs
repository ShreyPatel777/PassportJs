<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            /* background-color:rgb(122, 241, 243); */
            background: url('blue.jpg') no-repeat center center/cover;
            height: 100vh;
        }

        fieldset {
            width: 250px;
            height: 400px;
            position: relative;
            top: 200px;
            left: 600px;
            border: 3px solid black;
            border-radius: 20px;
            background-color: rgb(244, 237, 237);
            box-sizing: border-box;
        }

        legend {
            text-align: center;
            font-size: 25px;
            font-weight: bold;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            /* background-color: rgb(244, 237, 237);
            border-top-right-radius: 10px;
            border-top-left-radius: 10px; */
        }

        #title {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-size: 25px;
            text-decoration: underline;
        }

        #username {
            margin-top: 0px;
        }

        input {
            padding: 7px;
            padding-bottom: 10px;
            padding-top: 10px;
            margin: 6px 0px;
            border-radius: 10px;
            border-color: black;
            font-size: 18px;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            border: 2px solid black;
            background-color: rgb(244, 237, 237);
        }

        #btn1 {
            position: relative;
            top: 20px;
            font-size: 20px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            padding: 7px 20px 7px 20px;
            border: 2px solid black;
            border-radius: 5px;
            background-color: blue;
            color: white;
        }

        #btn {
            position: relative;
            top: 20px;
            font-size: 20px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            padding: 7px 20px 7px 20px;
            border: 2px solid black;
            border-radius: 5px;
            background-color: beige;
        }

        #btn1:hover {
            color: white;
            background-color: black;
        }

        #btn1:active {
            color: white;
            background-color: green;
        }

        center {
            background-color: rgb(244, 237, 237);
        }

        a:hover {
            color: rgb(10, 159, 10);
        }

        a:active {
            color: brown;
        }

        a {
            color: blue;
        }
    </style>
</head>

<body>
    <form action="/login" method="post">
        <fieldset>
            <!-- <legend>Login</legend> -->
            <p id="title">Login</p>
            <input id="username" type="email" placeholder="E-mail" size="30" name="username" autofocus="1" id="email">
            <br>
            <br>
            <input type="password" name="password" placeholder="••••••••" size="30" maxlength="8" autofocus="2">
            <a href="#">forgot password?</a>
            <br>
            <br>
            <center><button onclick="submitForm()" id="btn1">Login</button></center>
            <br>
            <hr>
            <center><button id="btn"><a href="signup">Signpage</a></button></center>
        </fieldset>
    </form>
    <script>
        function submitForm() {
            document.contact - form.submit();
            document.contact - form.reset();
        }
        document.getElementById('email').innerText.toLowerCase();
    </script>
</body>

</html>