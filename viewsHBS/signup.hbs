<body>
    <form action="/signup" method="post">
        <fieldset>
            <p id="title">Signup</p>
            <input id="name" type="text" placeholder="Name" size="40" required name="username" autofocus>
            <br>
            <br>
            <input type="email" placeholder="xyz123@gmail.com" size="40" required name="email" id="email">
            <br>
            <br>
            <input type="password" placeholder="••••••••" size="40" required name="password">
            <br>
            <button onclick="submitForm()">Signup</button>
            <br>
            <br>
            <hr>
            <button id="btn"><a href="login">Loginpage</a></button>
        </fieldset>
    </form>
    <script>
        function submitForm() {
            document.contact - form.submit();
            document.contact - form.reset();
        }
    </script>
</body>

